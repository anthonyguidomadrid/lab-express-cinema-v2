<div class="container">
    <div class="row white-bg movie-details">
        <div class="col-md-6">
            <img src="{{image}}" alt="{{title}} image">
        </div>
        <div class="col-md-6">
            <a href="/movies">Go back</a>
            <h1>{{title}}</h1>
            <h2>Director: {{director}}</h2>
            <h3>Stars</h3>
            <ul>
                {{#each stars}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>{{description}}</p>
            {{#each showtimes}}
            {{this}} |
            {{/each}}
        </div>
    </div>

</div>